{{> header}}

<div id="content">
<div id="forms">
    <div id="container">
        <label class="action-label" for="INSERT-genre"> Add a genre </label>
        <form id="INSERT-genre">
            <label for="genre-name">Name</label>
            <input type="text" id="genre-name" name="INSERT" placeholder="Action">

            <label for="genre-description">description</label>
            <input type="text" id="genre-description" name="INSERT" placeholder="This genre is...">

            <input type="submit" value="Add">
        </form>
    </div>
</div>

        <div id="tables">
            <div id="table-container">
                <table id="genres-table">
                    <thead>
                        <tr>
                            {{#each data.[0]}}
                            <th>
                                {{@key}}
                            </th>
                            {{/each}}
                        </tr>
                    </thead>
                    <tbody>
                        {{#each data}}
                        <tr>
                            <td>{{this.GenreID}}</td>
                            <td>{{this.GenreName}}</td>
                            <td>{{this.Description}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
</div>